<p style="color: green"><%= notice %></p>
<div class="shadow-lg p-3 mb-5 bg-body rounded">
  <%= render @book %>
  <div>
    <%= link_to books_path, style: "text-decoration: none;" do %>
      &nbsp;<i class="fa-solid fa-reply text-info"></i>
    <% end %>
    &nbsp;&nbsp;  
    <%= link_to edit_book_path(@book), style: "text-decoration: none;" do %>
      <i class="fa-solid fa-pen-to-square text-warning"></i>
    <% end %>

    <%= button_to @book, method: :delete, class: "btn" do %>
      <i class="fa-solid fa-trash-can text-danger" style="text-decoration: none;"></i>
    <% end %>
  </div>
</div>
