<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %>, no permiten que se guarde el libro.</h2>
      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Titulo del libro :", style: "display: inline-block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label "Autor :", style: "display: block" %>
    <%= form.text_area :author %>
  </div>

  <div>
    <%= form.label "Fecha préstamo :", style: "display: inline-block" %>
    <%= form.text_field :loan_date %>
    <%= form.label "Fecha devolución :", style: "display: inline-block" %>
    <%= form.text_field :return_date %>
  </div>

  <div>
    <%= form.label "Estado :", style: "display: inline-block" %>
      <% select_list = [ 'Prestado', 'En estante' ] %>
    <%= form.select :status, select_list, selected:'Prestado' %>
    <br>
  </div>
  
  <br>
  <br>
  <div class="inline">
    <%= link_to books_path, style: "text-decoration: none; display: inline-block" do %>
      <i class="fa-solid fa-reply text-info"></i>&nbsp;
    <% end %>
    <button type="submit" class="btn">
      <i class="fa-solid fa-floppy-disk"></i>&nbsp;
    </button>
  </div>
<% end %>
